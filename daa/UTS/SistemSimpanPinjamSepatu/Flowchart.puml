@startuml
start
:Pengguna melihat daftar sepatu;
if (Pengguna memilih sepatu?) then (Ya)
  :Pengguna memesan sepatu;
  :Pengguna mengambil sepatu;
  :Pengguna mengembalikan sepatu;
  if (Sepatu dalam kondisi baik?) then (Ya)
    :Pengembalian diterima;
  else (Tidak)
    :Pengguna dikenai denda;
  endif
else (Tidak)
  :Kembali ke daftar sepatu;
endif
stop
